{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "visual-studio-code-manager",
  "title": "Visual Studio Code - Manager",
  "description": "quick search and open project in vscode ......",
  "icon": "command-icon.png",
  "author": "ninnka",
  "contributors": [],
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "vsc-project",
      "title": "vsc-project - Search and Open project",
      "subtitle": "Visual Studio Code - Manager",
      "description": "Manager Visual Studio Code Project And Window",
      "mode": "view"
    },
    {
      "name": "vsc-new-window",
      "title": "vsc-new-window - Open new window",
      "subtitle": "Visual Studio Code - Manager",
      "description": "Manager Visual Studio Code Project And Window",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "projectDirPaths",
      "type": "textfield",
      "required": true,
      "default": "",
      "title": "Path of the Projects dir",
      "description": "example: /path/to/your/dir1;/path/to/your/dir2"
    },
    {
      "name": "terminalAppPath",
      "type": "textfield",
      "required": false,
      "default": "/Applications/iTerm.app",
      "title": "Terminal app path",
      "description": "Path to the terminal app"
    },
    {
      "name": "gitClientAppPath",
      "type": "textfield",
      "required": false,
      "default": "/Applications/Fork.app",
      "title": "Git client app path",
      "description": "Path to the Git client app"
    },
    {
      "name": "build",
      "type": "dropdown",
      "required": false,
      "title": "Build",
      "default": "Code",
      "description": "Select which build of Visual Studio Code to use",
      "data": [
        {
          "value": "Code",
          "title": "Visual Studio Code"
        },
        {
          "value": "Code - Insiders",
          "title": "Visual Studio Code - Insiders"
        },
        {
          "value": "VSCodium",
          "title": "VSCodium"
        },
        {
          "value": "VSCodium < 1.71",
          "title": "VSCodium < 1.71"
        },
        {
          "value": "Cursor",
          "title": "Cursor"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.65.1",
    "parse-git-config": "^3.0.0",
    "tildify": "^3.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/parse-git-config": "^3.0.1",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "react-devtools": "^4.19.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
